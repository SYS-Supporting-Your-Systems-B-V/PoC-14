# Basis LDAP-verbinding

HPD_LDAP_URI=ldap://localhost:389
# Voor LDAPS:
# HPD_LDAP_URI=ldaps://localhost:636

# Authenticatie:
# - Laat leeg voor anonieme bind
# - Vul in met bind-DN en wachtwoord voor authenticated bind
HPD_LDAP_BIND_DN=cn=ldap-reader,ou=ServiceAccounts,dc=HPD
HPD_LDAP_BIND_PASSWORD=zeer-geheim-wachtwoord

# Gebruik 'auto' om RootDSE discovery te doen, anders vaste base DN
HPD_LDAP_BASE_DN=dc=HPD


# TLS / beveiliging

# Gebruik of LDAPS (op 636) of StartTLS op 389, nooit allebei tegelijk
HPD_LDAP_USE_SSL=false
HPD_LDAP_START_TLS=true

# In productie: altijd true en een echte CA-bundle opgeven
HPD_LDAP_VERIFY_TLS=true
HPD_LDAP_CA_CERTS_FILE=/etc/ssl/certs/ca-bundle.crt

# Timeouts in seconden
HPD_LDAP_CONNECT_TIMEOUT=5
HPD_LDAP_TIMEOUT=10


# Zoek- en resultaatinstellingen

# Standaard maximum aantal resultaten bij /hpd/search
HPD_LDAP_DEFAULT_SIZE_LIMIT=50


# API-toegang (auth & CORS & hosts)

# Verplichte API key voor /hpd/search (in header X-API-Key)
# Laat leeg om API-key-check uit te zetten (alleen niet doen in productie).
HPD_LDAP_API_KEY=een-sterke-random-api-key

# Toegestane origins voor CORS (komma-gescheiden)
# Bijvoorbeeld: "https://epd.example.org,https://epd-acceptatie.example.org"
HPD_LDAP_ALLOW_ORIGINS=https://epd.example.org

# Toegestane hostnamen voor TrustedHostMiddleware (komma-gescheiden)
# Bijvoorbeeld: "epd-ldap-proxy.example.org,localhost"
HPD_LDAP_ALLOWED_HOSTS=epd-ldap-proxy.example.org


# Logging

# DEBUG / INFO / WARNING / ERROR
HPD_LDAP_LOG_LEVEL=INFO
